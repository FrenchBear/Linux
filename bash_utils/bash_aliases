# Extra shell init statements for Pierre Violent

alias cls='clear'
alias ll='ls -l --color=auto'
alias lc='ls -CF --color=auto'
alias la='ls -CAF --color=auto'
alias l='ls -l --color=auto'
alias m=make
alias md=mkdir
alias rd=rmdir
alias hi='history 25'
alias ver='uname -a;cat /etc/debian_version;lsb_release -da;hostnamectl'
alias man='man -P less'
alias python=python3
alias pip=pip3
